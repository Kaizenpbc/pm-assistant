{
  "name": "pm-application-v2",
  "version": "1.0.0",
  "description": "Production-ready Project Management Application with modern architecture",
  "main": "dist/server/index.js",
  "scripts": {
    "dev": "concurrently \"npm run server:dev\" \"npm run client:dev\"",
    "server:dev": "nodemon --exec tsx src/server/index.ts",
    "client:dev": "cd src/client && npm run dev",
    "build": "npm run build:server && npm run build:client",
    "build:server": "tsc --project tsconfig.json",
    "build:client": "cd src/client && npm run build",
    "start": "node dist/server/index.js",
    "test": "vitest",
    "test:e2e": "playwright test",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "type-check": "tsc --noEmit",
    "db:migrate": "tsx src/server/database/migrate.ts",
    "db:seed": "tsx src/server/database/seed.ts"
  },
  "keywords": [
    "project-management",
    "fastify",
    "react",
    "typescript",
    "production"
  ],
  "author": "Guyana Civic",
  "license": "MIT",
  "type": "commonjs",
  "dependencies": {
    "@fastify/cookie": "^11.0.2",
    "@fastify/cors": "^11.1.0",
    "@fastify/helmet": "^13.0.1",
    "@fastify/rate-limit": "^10.3.0",
    "@fastify/swagger": "^9.5.1",
    "@fastify/swagger-ui": "^5.2.3",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.10",
    "bcryptjs": "^3.0.2",
    "dotenv": "^17.2.2",
    "fastify": "^5.6.0",
    "jsonwebtoken": "^9.0.2",
    "mysql2": "^3.15.0",
    "pino": "^9.11.0",
    "pino-pretty": "^13.1.1",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "nodemon": "^3.1.10",
    "tsx": "^4.20.5"
  }
}
