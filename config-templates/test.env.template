# PM Application v2 - Test Environment Configuration Template
# Copy this file to .env.test and customize as needed

# Server Configuration
NODE_ENV=test
PORT=3002
HOST=localhost

# Database Configuration (MySQL)
# Use a separate test database
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=rootpassword
DB_NAME=pm_application_v2_test

# JWT Configuration (Test secrets - can be shorter for testing)
# ⚠️  CRITICAL: Generate secure secrets using: npm run config:generate-secrets
# ⚠️  DO NOT use these placeholder values - they will cause startup failures!
JWT_SECRET=PLACEHOLDER_GENERATE_REAL_SECRET_WITH_NPM_RUN_CONFIG_GENERATE_SECRETS
JWT_REFRESH_SECRET=PLACEHOLDER_GENERATE_REAL_SECRET_WITH_NPM_RUN_CONFIG_GENERATE_SECRETS
COOKIE_SECRET=PLACEHOLDER_GENERATE_REAL_SECRET_WITH_NPM_RUN_CONFIG_GENERATE_SECRETS

# CORS Configuration
CORS_ORIGIN=http://localhost:5173

# Logging Configuration
LOG_LEVEL=error

# Test-specific Settings
TEST_DATABASE_CLEANUP=true
TEST_TIMEOUT_MS=10000
MOCK_EXTERNAL_APIS=true
